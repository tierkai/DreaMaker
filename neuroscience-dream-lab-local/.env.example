# 神经梦境实验室环境变量配置模板
# 复制此文件为 .env.local 并填入实际配置值

# ================================
# Supabase 配置 (必需)
# ================================
# 你的Supabase项目URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# 你的Supabase匿名密钥 (anon key)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase服务密钥 (可选，用于服务端操作)
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ================================
# MiniMax AI 配置 (可选)
# ================================
# MiniMax API密钥 (用于AI沙龙功能)
VITE_MINIMAX_API_KEY=your_minimax_api_key

# MiniMax Group ID (可选)
VITE_MINIMAX_GROUP_ID=your_group_id

# ================================
# 开发模式配置
# ================================
# 开发模式开关
VITE_DEV_MODE=true

# API基础URL
VITE_API_BASE_URL=http://localhost:54321

# ================================
# 应用配置
# ================================
# 应用名称
VITE_APP_NAME=神经梦境实验室

# 应用版本
VITE_APP_VERSION=1.0.0

# 环境标识
VITE_ENVIRONMENT=development

# ================================
# 功能开关
# ================================
# 启用3D功能
VITE_ENABLE_3D=true

# 启用AI功能
VITE_ENABLE_AI=true

# 启用实验功能
VITE_ENABLE_EXPERIMENTS=true

# 启用用户认证
VITE_ENABLE_AUTH=true

# ================================
# 性能配置
# ================================
# 3D渲染质量 (low/medium/high)
VITE_3D_QUALITY=medium

# 动画帧率限制
VITE_MAX_FPS=60

# WebGL上下文属性
VITE_WEBGL_CONTEXT_ATTRIBUTES={"alpha":true,"antialias":true,"preserveDrawingBuffer":false,"powerPreference":"high-performance"}

# ================================
# 调试配置
# ================================
# 启用详细日志
VITE_DEBUG_LOGGING=false

# 启用性能监控
VITE_PERFORMANCE_MONITORING=true

# 启用错误报告
VITE_ERROR_REPORTING=true

# ================================
# 第三方服务配置
# ================================
# Google Analytics ID (可选)
VITE_GA_ID=your_google_analytics_id

# Sentry DSN (可选，用于错误监控)
VITE_SENTRY_DSN=your_sentry_dsn

# ================================
# 安全配置
# ================================
# JWT密钥 (用于本地token生成)
VITE_JWT_SECRET=your_jwt_secret_key

# 加密盐值
VITE_ENCRYPTION_SALT=your_encryption_salt

# 会话超时时间 (分钟)
VITE_SESSION_TIMEOUT=30

# ================================
# 数据库配置
# ================================
# 数据库连接池大小
VITE_DB_POOL_SIZE=10

# 查询超时时间 (毫秒)
VITE_QUERY_TIMEOUT=5000

# 缓存TTL时间 (秒)
VITE_CACHE_TTL=3600

# ================================
# 网络配置
# ================================
# API请求超时时间 (毫秒)
VITE_API_TIMEOUT=10000

# WebSocket连接超时时间 (毫秒)
VITE_WS_TIMEOUT=5000

# 最大重试次数
VITE_MAX_RETRIES=3

# ================================
# UI配置
# ================================
# 主题模式 (light/dark/auto)
VITE_THEME_MODE=auto

# 语言设置
VITE_LOCALE=zh-CN

# 时区设置
VITE_TIMEZONE=Asia/Shanghai

# 数字格式
VITE_NUMBER_FORMAT=zh-CN

# ================================
# 文件上传配置
# ================================
# 最大文件大小 (MB)
VITE_MAX_FILE_SIZE=50

# 允许的文件类型
VITE_ALLOWED_FILE_TYPES=image/*,video/*,application/pdf

# 上传路径
VITE_UPLOAD_PATH=uploads

# ================================
# 缓存配置
# ================================
# Redis连接URL (可选)
VITE_REDIS_URL=redis://localhost:6379

# 缓存前缀
VITE_CACHE_PREFIX=neuroscience_dream_lab

# 缓存键过期时间 (秒)
VITE_CACHE_KEY_EXPIRY=86400